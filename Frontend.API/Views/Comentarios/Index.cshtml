@model IEnumerable<FrontEnd.API.Models.Comentario>

@{
    ViewData["Title"] = "Index";
}

<h1>Gestión Comentarios</h1>
<hr />


<!-- Main content -->
<section class="content">
    <div class="container-index">
        <img src="~/img/Business.jpg" style="opacity: .8; width:100%; height:100%">
        <div class="container-fluid2">

            <!-- Default box -->
            <div class="card" style="height:70%">

                <div class="card-body p-0 container-fluid3">
                    <div class="col-md-12">
                        <br />
                        <a class="btn btn-primary btn-sm" asp-action="Create">
                            <i class="fas fa-plus">
                            </i>
                            Agregar nuevo
                        </a>
                    </div>
                    <br />
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Comentario1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Foro)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Usuario)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Comentario1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Foro.ForoId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Usuario.UserName)
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.ComentarioId">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Editar
                                        </a>

                                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ComentarioId">
                                            <i class="fas fa-folder">
                                            </i>
                                            Ver Detalles
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ComentarioId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->

