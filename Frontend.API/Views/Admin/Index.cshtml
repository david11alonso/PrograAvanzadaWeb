@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Index";
}
<h1>Gestión Propuestas</h1>
<hr />
<!-- Main content -->
<section class="content">
    <div class="container-index">
        <img src="~/img/Business.jpg" style="opacity: .8; width:100%; height:100%">
        <div class="container-fluid2">
            <!-- Default box -->
            <div class="card" style="height:70%">

                <div class="card-body p-0 container-fluid3">
                    <div class="col-md-12">
                        <br />
                        <a class="btn btn-primary btn-sm" asp-action="Create">
                            <i class="fas fa-plus">
                            </i>
                            Agregar nuevo
                        </a>
                    </div>
                    <br />
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayName("Rol")
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tipo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaPublicacion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaFinalizacion)
                                </th>*@
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NormalizedUserName)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.Pendiente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tipo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaPublicacion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaFinalizacion)*@
                                    @*</td>*@
                                    <td class="project-actions text-right">

                                        <a class="btn btn-info btn-sm" asp-action="Update" asp-route-id="@item.Id">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Editar
                                        </a>
                                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="fas fa-folder">
                                            </i>
                                            Ver detalles
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fas fa-trash">
                                            </i>
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->
