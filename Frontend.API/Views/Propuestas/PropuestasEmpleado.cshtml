@model IEnumerable<FrontEnd.API.Models.Propuesta>

@{
    ViewData["Title"] = "Index";
}
<h1>Propuestas pendientes</h1>
<hr />
<!-- Main content -->
<section class="content">
    <div class="container-index">
        <img src="~/img/Business.jpg" style="opacity: .8; width:100%; height:100%">
        <div class="container-fluid2">
            <!-- Default box -->
            <div class="card" style="height:70%">

                <div class="card-body p-0 container-fluid3">
                    <br />
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th>
                                    T&iacute;tulo
                                </th>
                                <th>
                                    Descripci&oacute;n
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Pendiente)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Titulo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pendiente)
                                    </td>
                                    <td class="project-actions text-right">
                                        @{
                                            if (item.Pendiente)
                                            {
                                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.PropuestaId">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Editar
                                                </a>
                                                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.PropuestaId">
                                                    <i class="fas fa-folder">
                                                    </i>
                                                    Ver detalles
                                                </a>
                                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.PropuestaId">
                                                    <i class="fas fa-trash">
                                                    </i>
                                                    Eliminar
                                                </a>
                                            } else
                                            {
                                                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.PropuestaId">
                                                    <i class="fas fa-folder">
                                                    </i>
                                                    Ver detalles
                                                </a>
                                            }
                                            
                                        }

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->
