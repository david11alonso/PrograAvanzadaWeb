@model IEnumerable<FrontEnd.API.Models.Propuesta>

@{
    ViewData["Title"] = "IndexEmpleado";
}
<h1>Gestión Propuestas</h1>
<hr />
<!-- Main content -->
<section class="content">
    <div class="container-index">
        <img src="~/img/Business.jpg" style="opacity: .8; width:100%; height:100%">
        <div class="container-fluid2">
            <!-- Default box -->
            <div class="card" style="height:100%">

                <div class="card-body p-0 container-fluid3">

                    <br />
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Titulo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Problema)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ResultadoEsperado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Riesgos)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Beneficios)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Titulo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Problema)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ResultadoEsperado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Riesgos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Beneficios)
                                </td>
                                <td class="project-actions text-right">

                                    <a class="btn btn-info btn-sm" asp-action="Votar" asp-route-id="@item.PropuestaId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Votar
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->
