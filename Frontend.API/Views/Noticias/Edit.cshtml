@model FrontEnd.API.Models.Noticia

@{
    ViewData["Title"] = "Edit";
}

<h1>Formulario Editar Noticia</h1>

<hr />
<!-- Main content -->
<section class="content">
    <div class="container-index">
        <img src="~/img/Business.jpg" style="opacity: .8; width:100%">
        <div class="container-fluid2">


            <!-- SECTION TITLE  -->
            <div class="card card-default col-md-6">
                <!-- /.card-header -->
                <div class="card-body">
                    <form asp-action="Edit">
                        <div class="row">
                            <div class="col-md-12">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="NoticiaId" />
                                <div class="form-group">
                                    <label>Usuario</label>
                                    <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Descripci&oacute;n</label>
                                    <input asp-for="Descripcion" class="form-control" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                                </div>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </form>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.card-default -->
        </div>
        <!-- /.container-fluid -->
    </div>
</section>
<!-- /.content -->
<br />
<section class="content">
    <div class="container-fluid">

        <div>
            <a asp-action="Index">Volver al Menú Principal</a>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
