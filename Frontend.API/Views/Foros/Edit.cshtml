@model FrontEnd.API.Models.Foro

@{
    ViewData["Title"] = "Edit";
}


<h1>Edición Foro</h1>
<hr />


<!-- Main content -->
<section class="content">
    <div class="container-index">
        <img src="~/img/Business.jpg" style="opacity: .8; width:100%">
        <div class="container-fluid2">


            <!-- SECTION TITLE  -->
            <div class="card card-default col-md-6">

                <!-- /.card-header -->

                <div class="card-body">
                    <form asp-action="Edit">
                        <div class="row">
                            <div class="col-md-12">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="ForoId" />
                                <div class="form-group">
                                    <label asp-for="PropuestaId" class="control-label"></label>
                                    <select asp-for="PropuestaId" class="form-control" asp-items="ViewBag.PropuestaId"></select>
                                    <span asp-validation-for="PropuestaId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                                </div>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </form>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.card-default -->
        </div>
        <!-- /.container-fluid -->
    </div>
</section>
<!-- /.content -->
<br />

<section class="content">
    <div class="container-fluid">

        <div>
            <a asp-action="Index">Volver a Foros</a>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
