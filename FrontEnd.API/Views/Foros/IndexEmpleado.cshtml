@model IEnumerable<FrontEnd.API.Models.Foro>

@{
    ViewData["Title"] = "Index";
}

<h1>Foros activos</h1>
<hr />


<!-- Main content -->
<section class="content">
    <div class="container-index">
        <img src="~/img/Business.jpg" style="opacity: .8; width:100%; height:100%">
        <div class="container-fluid2">

            <!-- Default box -->
            <div class="card" style="height:70%">

                <div class="card-body p-0 container-fluid3">

                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th>
                                    T&iacute;tulo propuesta
                                </th>
                                <th>
                                    Descripci&oacute;n
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Propuesta.Titulo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Propuesta.Descripcion)
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" asp-action="IndexComentarios" asp-route-id="@item.ForoId">
                                        <i class="fas fa-search">
                                        </i>
                                        Comentarios
                                    </a>
                                    <a class="btn btn-primary btn-sm" href="~/Propuestas/Details?id=@item.PropuestaId">
                                        <i class="fas fa-folder">
                                        </i>
                                        Ver detalles
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->