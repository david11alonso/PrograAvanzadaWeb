@model IEnumerable<FrontEnd.API.Models.Propuesta>

@{
    ViewData["Title"] = "Index";
}
<h1>Aprobaci&oacute;n Propuestas</h1>
<hr />
<!-- Main content -->
<section class="content">
    <div class="container-index">
        <img src="~/img/Business.jpg" style="opacity: .8; width:100%; height:100%">
        <div class="container-fluid2">
            <!-- Default box -->
            <div class="card" style="height:70%">

                <div class="card-body p-0 container-fluid3">
                    
                    <br />
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th>
                                    T&iacute;tulo
                                </th>
                                <th>
                                    Descripci&oacute;n
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Pendiente)
                                </th>
                                <th>
                                    Fecha Publicaci&oacute;n
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Titulo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pendiente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaPublicacion)
                                    </td>
                                    <td class="project-actions text-right">

                                        <a class="btn btn-success btn-sm" asp-action="Aprobar" asp-route-id="@item.PropuestaId">
                                            <i class="fas fa-check">
                                            </i>
                                            Aprobar
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-action="DeleteAprobacion" asp-route-id="@item.PropuestaId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Rechazar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->
