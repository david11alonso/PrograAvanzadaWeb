@model IEnumerable<FrontEnd.API.Models.ReporteVotos>

@{
    ViewData["Title"] = "Index";
}
<h1>Reporte de votos por propuesta</h1>
<hr />

<!-- Main content -->
<section class="content">
    <div class="container-index">
        <img src="~/img/Business.jpg" style="opacity: .8; width:100%; height:100%">
        <div class="container-fluid2">

            <!-- Default box -->
            <div class="card" style="height:70%">

                <div class="card-body p-0 container-fluid3">
                    
                    <br />
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th>
                                    T&iacute;tulo propuesta
                                </th>
                                <th style="text-align:center">
                                    En desacuerdo
                                </th>
                                <th style="text-align:center">
                                    Neutral
                                </th>
                                <th style="text-align:center">
                                    De acuerdo
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Propuesta.Titulo)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.DeSacuerdo)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.Neutral)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.DeAcuerdo)
                                </td>
                                <td class="project-actions text-right">
                                   
                                    <a class="btn btn-primary btn-sm" asp-action="IndexComentarios" asp-route-id="@item.Propuesta.PropuestaId">
                                        <i class="fas fa-folder">
                                        </i>
                                        Ver Comentarios
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->
