@model IEnumerable<FrontEnd.Models.Noticia>

@{
    ViewData["Title"] = "Index";
}

<h1>Noticias</h1>
<hr />
<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">
        <i class="fas fa-plus">
        </i>
        Agregar nuevo
    </a>
</p>


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">

        <div class="card-body p-0" style="overflow-x:auto;">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Usuario)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Usuario.Id)
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.NoticiaId">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a> 
                                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.NoticiaId">
                                    <i class="fas fa-folder">
                                    </i>
                                    Details
                                </a> 
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.NoticiaId">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
